@* @using BookWeb.Models *@
@model List<Product>
<div class="row pt-4 pb-23">
    <div class="col-6">
        <h2 class="text-primary">
            Product List
        </h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Product
        </a>
    </div>
</div>
<table class= "table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Title
            </th>
            <th>
                ISBN
            </th>
            @* <th>
                Description
            </th> *@
            <th>
                Author
            </th>
            <th>
                PriceList
            </th>
            <td>
                Price
            </td>
            <td>
                Price for +50
            </td>
            <td>
                Price for +100
            </td>
            <td>
                Category ID
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model.OrderBy(u => u.ProductId))
        {
            <tr>
                <td>
                    @c.ProductId
                </td>
                <td>
                    @c.Title
                </td>
                <td>
                    @c.ISBN
                </td>
                @* <td>
                    @c.Description
                </td> *@
                <td>
                    @c.Author
                </td>
                <td>
                    @c.PriceList
                </td>
                <td>
                    @c.Price
                </td>
                <td>
                    @c.Price50
                </td>
                <td>
                    @c.Price100
                </td>
                <td>
                    @c.CId
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@c.ProductId" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@c.ProductId" class="btn btn-danger mx-2">
                            <i class="bi bi-x-square"></i>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>