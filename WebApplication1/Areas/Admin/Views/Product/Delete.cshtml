@* @using BookWeb.Models *@
@model Product

<form method="post">
    @* To get the id of the updated (edited) product object *@
    <input asp-for="ProductId" hidden />
    <input asp-for="Title" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete Product
            </h2>
        </div>
        <div class="form-floating  py-2 col-12">
            <input asp-for="Title" class="form-control border-0 shadow" disabled/>
            <label asp-for="Title" class="ms-2"></label>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-floating  py-2 col-12">
            <input asp-for="ISBN" class="form-control border-0 shadow" disabled />
            <label asp-for="ISBN" class="ms-2"></label>
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        <div class="form-floating  py-2 col-12">
            <textarea asp-for="Description" class="form-control border-0 shadow" disabled></textarea>
            <label asp-for="Description" class="ms-2"></label>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-floating  py-2 col-12">
            <input asp-for="Author" class="form-control border-0 shadow" disabled />
            <label asp-for="Author" class="ms-2"></label>
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="PriceList" class="form-control border-0 shadow" disabled />
            <label asp-for="PriceList" class="ms-2"></label>
            <span asp-validation-for="PriceList" class="text-danger"></span>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Price" class="form-control border-0 shadow" disabled />
            <label asp-for="Price" class="ms-2"></label>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Price50" class="form-control border-0 shadow" disabled />
            <label asp-for="Price50" class="ms-2"></label>
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Price100" class="form-control border-0 shadow" disabled />
            <label asp-for="Price100" class="ms-2"></label>
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>
        <div class="row pt-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>