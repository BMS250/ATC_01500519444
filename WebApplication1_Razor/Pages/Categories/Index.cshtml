@page
@model WebApplication1_Razor.Pages.Categories.IndexModel
<div class="row pt-4 pb-23">
    <div class="col-6">
        <h2 class="text-primary">
            Category List
        </h2>
    </div>
    <div class="col-6 text-end">
        <a asp-page="/Categories/Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Category
        </a>
    </div>
</div>
<table class= "table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
               Name
            </th>
            <th>
                Display Order
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var c in Model.CategoriesList.OrderBy(u=>u.CategoryId))
        {
            <tr>
                <td>
                    @c.CategoryId
                </td>
                <td>
                    @c.Name
                </td>
                <td>
                    @c.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/Categories/Edit" asp-route-id="@c.CategoryId" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                        <a asp-page="/Categories/Delete" asp-route-id="@c.CategoryId" class="btn btn-danger mx-2">
                            <i class="bi bi-x-square"></i>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>